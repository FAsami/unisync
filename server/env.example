NODE_ENV=<development|production|test>
LOG_LEVEL=info
LOG_FILE_ENABLED=true
API_VERSION=v1
APP_VERSION=1.0.0
JWT_ACCESS_TOKEN_EXPIRY=1h
JWT_REFRESH_TOKEN_EXPIRY=30d
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001
HASURA_ENDPOINT=http://192.168.0.197:9203/v1/graphql
HASURA_ADMIN_SECRET=123
JWT_SECRET=reallySecretKey

# Hasura Actions Base URL (for OTP and other actions)
ACTION_BASE_URL=http://localhost:9201/api/v1

# Optional: SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=5
OTP_LENGTH=6
OTP_BCRYPT_ROUNDS=12

# OTP Rate Limits (OWASP recommended)
OTP_SEND_LIMIT_PER_HOUR=3
OTP_SEND_LIMIT_PER_IP_PER_HOUR=10
OTP_VERIFY_LIMIT_PER_15MIN=5

# Email Provider Configuration (not yet implemented)
EMAIL_PROVIDER=console
RESEND_API_KEY=
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
AWS_SES_REGION=
AWS_SES_FROM_EMAIL=

# SMS Provider Configuration (via Database - see docs/guide/providers.md)
# BulkSMS Bangladesh
BULK_SMS_API_KEY=your_api_key_here
BULK_SMS_SECRET_KEY=your_secret_key_here
BULK_SMS_CALLER_ID=your_sender_id

# Future SMS Providers (not yet implemented)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
AWS_SNS_REGION=

# Sentry Error Tracking (optional)
SENTRY_DSN=