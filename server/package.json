{
    "name": "unisync-api",
    "version": "1.0.0",
    "description": "REST api for both mobile and web application for unisync",
    "main": "dist/index.js",
    "author": "Foysal Sami<foysal.developer@gmail.com>",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "tsx src/index.ts",
        "watch": "nodemon --exec tsx src/index.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:verbose": "jest --verbose",
        "clean": "rm -rf dist",
        "prebuild": "yarn clean",
        "codegen": "graphql-codegen",
        "codegen:watch": "graphql-codegen --watch"
    },
    "keywords": [
        "typescript",
        "server",
        "api"
    ],
    "license": "MIT",
    "dependencies": {
        "@sentry/integrations": "^7.114.0",
        "@sentry/node": "^9.40.0",
        "@types/jsonwebtoken": "^9.0.10",
        "compression": "^1.8.1",
        "cors": "^2.8.5",
        "dotenv": "^17.2.0",
        "express": "^4.18.2",
        "express-rate-limit": "^8.0.1",
        "graphql": "^16.11.0",
        "graphql-request": "^7.2.0",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.1",
        "rate-limiter-flexible": "^7.1.1",
        "uuid": "^9.0.1",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^5.0.7",
        "@graphql-codegen/typescript": "^4.1.6",
        "@graphql-codegen/typescript-operations": "^4.6.1",
        "@types/compression": "^1.8.1",
        "@types/cors": "^2.8.17",
        "@types/dotenv": "^8.2.3",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.14",
        "@types/morgan": "^1.9.9",
        "@types/node": "^24.1.0",
        "@types/supertest": "^6.0.3",
        "@types/uuid": "^9.0.7",
        "jest": "^29.7.0",
        "nodemon": "^3.0.0",
        "supertest": "^7.1.3",
        "ts-jest": "^29.4.0",
        "tsx": "^4.20.3",
        "typescript": "^5.3.0"
    }
}
