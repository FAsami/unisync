{
    "name": "unisync-api",
    "version": "1.0.0",
    "description": "REST api for both mobile and web application for unisync",
    "main": "dist/index.js",
    "author": "Foysal Sami<foysal.developer@gmail.com>",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "tsx src/index.ts",
        "watch": "nodemon --exec tsx src/index.ts",
        "clean": "rm -rf dist",
        "prebuild": "yarn clean",
        "codegen": "graphql-codegen",
        "codegen:watch": "graphql-codegen --watch"
    },
    "keywords": [
        "typescript",
        "server",
        "api"
    ],
    "license": "MIT",
    "dependencies": {
        "@sentry/integrations": "^7.114.0",
        "@sentry/node": "^9.41.0",
        "axios": "^1.12.2",
        "bcrypt": "^6.0.0",
        "compression": "^1.8.1",
        "cors": "^2.8.5",
        "dotenv": "^17.2.0",
        "express": "^5.1.0",
        "express-rate-limit": "^8.0.1",
        "firebase-admin": "^13.0.2",
        "graphql": "^16.11.0",
        "graphql-request": "^7.3.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "libphonenumber-js": "^1.12.24",
        "morgan": "^1.10.1",
        "rate-limiter-flexible": "^8.0.1",
        "typescript": "^5.3.0",
        "uuid": "^11.1.0",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^5.0.7",
        "@graphql-codegen/typescript": "^4.1.6",
        "@graphql-codegen/typescript-graphql-request": "^6.3.0",
        "@graphql-codegen/typescript-operations": "^4.6.1",
        "@types/bcrypt": "^6.0.0",
        "@types/compression": "^1.8.1",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/helmet": "^4.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/morgan": "^1.9.10",
        "@types/node": "^24.1.0",
        "@types/uuid": "^10.0.0",
        "@types/winston": "^2.4.4",
        "nodemon": "^3.0.0",
        "tsx": "^4.20.3"
    }
}
